<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path("background-image.jpg")%>')">
  <div class="banner-content">
    <h1>My-cocktail.com</h1>
    <p>The best cocktail on earth .</p>
    <a class="btn btn-primary btn-lg">Taste it</a>
  </div>
</div>


<div class="text-center">
<%= link_to 'Create a new cocktail', new_cocktail_path, {class: " btn btn-primary btn-create"} %>
  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="cards text-center">
              <h3><%= cocktail.name %></h3>
              <%= cl_image_tag cocktail.photo, height: 100, width: 150, crop: :fill %>
              <%= link_to '', cocktail, {class: "btn btn-secondary btn-card card-link"} %>
          </div>
          <%= link_to 'Delete', cocktail, method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</div>

